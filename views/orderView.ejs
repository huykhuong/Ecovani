<%- include('partials/indexHeader') %>
</header>

<main>
  <% if (orders.length) { %>
  <div class="small-container cart-page">
    <h4>Your orders</h4>
    <table>

      <% orders.forEach(function(order){ %>
      <thead>
        <tr>
          <th>Order</th>
          <th>Address</th>
          <th>Time</th>
        </tr>
      </thead>

      <tr class="cartTableRow">
        <td style="width:37%;">
          <a href="/order/<%=order.id%>"><%=order._id%></a>
        </td>

        <td  style="width:20%;">
          <%=order.address%>
        </td>

        <td style="width:20%;font-weight:900;"><%= moment(order.createdAt).format('MMMM Do YYYY, hh:mm  A') %></td>
      </tr>
      <% }); %>
    </table>

  </div>
  <% } else {%>
      <p>No order found</p>
  <% } %>
</main>

<%- include('partials/indexFooter') %>
